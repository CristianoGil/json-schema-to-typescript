{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.dev.vm.co.mz/sysdoc/v1.0.0/concepts.json",
    "title": "Concepts",
    "description": "The definition of core application aspects",
    "type": "array",
    "items": {
        "$ref": "#/definitions/concept"
    },
    "definitions": {
        "concept": {
            "type" : "object",
            "description" : "Defines a concept that is specific to the system",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The concept name"
                },
                "description": {
                    "description": "A description represented by a simple text or an asciidoc file",
                    "oneOf": [
                        {
                            "type": "string",
                            "description": "The plain text description of the concept"
                        },
                        {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "src": {
                                    "type": "string",
                                    "description": "The URI pointing to the asciidoc containing the concept"
                                }
                            },
                            "required": [
                                "src"
                            ]
                        }
                    ]
                }

            },
            "required": [
                "name",
                "description"
            ]
        }
    }
}